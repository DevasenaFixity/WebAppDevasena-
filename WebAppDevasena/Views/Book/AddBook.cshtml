@using WebAppDevasena.Models;
@model BOOKDETAILSModel;
   
@{
    ViewData["Title"] = "InsertBook";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InsertBook</title>
    <meta name="viewport" content="width=device-width" />
 
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://www.markuptag.com/bootstrap/5/css/bootstrap.min.css">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="signup-form mt-5 border p-4 bg-light shadow">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <h4 class="mb-5 text-secondary">Create Your Account</h4>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label>BNAME<span class="text-danger">*</span></label>
                                @Html.TextBoxFor(model => model.BNAME, new { @class = "form-control", placeholder="Enter Book Name" })
                                @Html.ValidationMessageFor(model => model.BNAME, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3 col-md-6">
                                <label>BAUTHOR<span class="text-danger">*</span></label>
                                @Html.TextBoxFor(model => model.BAUTHOR, new { @class = "form-control", placeholder="Enter Book Author" })
                                @Html.ValidationMessageFor(model => model.BAUTHOR, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3 col-md-6">
                                <label>BPUBLICATION<span class="text-danger">*</span></label>
                                @Html.TextBoxFor(model => model.BPUBLICATION, new { @class = "form-control", placeholder="Enter Book Publication" })
                                @Html.ValidationMessageFor(model => model.BPUBLICATION, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3 col-md-6">
                                <label>BPRICE<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.BPRICE, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "Book Price"} })
                                @Html.ValidationMessageFor(model => model.BPRICE, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3 col-md-6">
                                <label>BPURCHASEDATE<span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.BPURCHASEDATE, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "Book Purchase"} })
                                @Html.ValidationMessageFor(model => model.BPURCHASEDATE, "", new { @class = "text-danger" })
                            </div>
                         
                                <div class="col-md-7">
                                <p class="text-center mt-3 text-secondary">If you have account,  @Html.ActionLink("Insertdata","AddBook","Book")</p>
                                </div>A
                                <div class="col-md-5">
                                    <input type="submit" class="btn btn-primary float-end" value="Submit">

                                </div>
                            </div>
                        
                    }
                </div>

</body>
</html>

